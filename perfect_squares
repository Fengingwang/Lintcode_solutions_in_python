class Solution:
    def numSquares(self, n):
        # write your code here
        if n <= 0: return
        f = [sys.maxsize] * (n + 1)
        f[0] = 0
        
        for i in range(1, n + 1, 1):
            for j in range(1, int(i ** 0.5) + 1, 1): 
                f[i] = min(f[i], f[i - j * j] + 1)
        
        return f[n]
