class Solution:
    """
    @param height: A list of integer
    @return: The area of largest rectangle in the histogram
    """
    def largestRectangleArea(self, height):
        # write your code here
        # it is an increasing array, whenever you find a smaller one 
        # you need to pop is out 
        index_stack = []
        area = []
        for index, height in enumerate(heights + [-1]):
            while index_stack and heights[index_stack[-1]] >= height:
                popped_index = index_stack.pop()
                left_index = index_stack[-1] if index_stack else -1
                width = index - left_index -1 
                area = max(area, width * heights[popped_index])
                
            index_stack.append(index)
            
        return area
                
                
