# similar to isomorphic strings
class Solution(object):
    def wordPattern(self, pattern, str):
        """
        :type pattern: str
        :type str: str
        :rtype: bool
        """
        #method Three
        pdict, sdict = {}, {}
        str = str.split()
        if len(pattern) != len(str):
            return False
            
        for i in range(len(pattern)):
            if pt.get(pattern[i],0) != st.get(str[i],0):
                return False
            pt[pattern[i]] = i + 1
            st[str[i]] = i + 1
            
        return True
