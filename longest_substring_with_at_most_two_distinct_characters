class Solution:
    """
    @param s: A string
    @param k: An integer
    @return: An integer
    """
    def lengthOfLongestSubstringKDistinct(self, s, k):
        # write your code here
        if s is None or len(s) == 0: 
            return 0
        
        n = len(s)
        dic = collections.defaultdict(int)
        res, head = 0, 0
        
        for i in range(n):
            dic[s[i]] += 1
            while len(dic) > k:
                dic[s[head]] -= 1
                if dic[s[head]] == 0:
                    del dic[s[head]]
                head += 1
            res = max(res, i - head + 1)
    
        return res 
        
        
